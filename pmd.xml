<?xml version="1.0"?>
<ruleset name="MyCustomRuleset">
    <description>
        My custom ruleset for Java code.
    </description>

    <rule name="MyCustomRule"
          language="java"
          message="Avoid using the word 'myApiKey123'"
          class="com.example.MyCustomRule"
          externalInfoUrl="https://github.com/dvaibhavi7/CodeScan-Java">
        <description>Scan for the word 'myApiKey123'</description>
        <priority>3</priority>
        <properties>
            <property name="violationSuppressRegex" value="//NOPMD"/>
            <property name="xpath">
                <value>//*[contains(., 'myApiKey123')]</value>
            </property>
        </properties>
    </rule>
    
</ruleset>
