<?xml version="1.0"?>
<ruleset name="MyCustomRuleSet"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        My custom ruleset for Java code.
    </description>

    <rule name="MyCustomRule"
          language="java"
          message="Avoid using the word 'myApiKey123'"
          class="net.sourceforge.pmd.lang.rule.XPathRule"
          externalInfoUrl="https://github.com/dvaibhavi7/CodeScan-Java">
        <description>Scan for the word 'myApiKey123'</description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>//Literal[contains(@Image, 'myApiKey123')]</value>
            </property>
        </properties>
    </rule>

    <rule ref="category/java/errorprone.xml"/>
    <rule ref="category/java/bestpractices.xml">
        <exclude name="UseStringBufferForStringAppends"/>
    </rule>
    <rule ref="category/java/performance.xml"/>
    <rule ref="category/java/design.xml" />
    <rule ref="category/java/codestyle.xml" />
    <rule ref="category/java/security.xml" />

    <rule ref="rulesets/java/empty.xml"/>
    <rule ref="rulesets/java/unnecessary.xml"/>
    <rule ref="rulesets/java/basic.xml"/>
    <rule ref="rulesets/java/unusedcode.xml"/>
    <rule ref="rulesets/java/naming.xml"/>
    <rule ref="rulesets/java/strictexception.xml"/>
    <rule ref="rulesets/java/optimizations.xml"/>

    <rule name="LoosePackageCoupling"
          message="Avoid coupling between classes in the com.example package."
          class="net.sourceforge.pmd.lang.java.rule.design.LoosePackageCoupling">
        <description>Scan for coupling between classes in the com.example package.</description>
        <priority>3</priority>
        <properties>
            <property name="packageNames">
                <value>com.example.*</value>
            </property>
        </properties>
    </rule>
    
</ruleset>
